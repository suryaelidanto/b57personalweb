<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog</title>
    <style>
      *, body { margin: 0; } .hamburger-button { display: none; }
      .hamburger-container { display: flex; flex-direction: column; }
      .hamburger-container a { width: 100%; text-align: center;
      background-color: #ebeaea; color: black; text-decoration: none; padding:
      20px 0; border: 1px solid white; } .hamburger-container .hamburger-active
      { background-color: orangered; color: white; } .hamburger-hide { display:
      none; } @media screen and (max-width: 768px) { .form-container { padding:
      50px; } .blog-list-item { flex-direction: column; } } @media screen and
      (max-width: 640px) { .navbar-container li a { display: none; }
      .hamburger-button { display: block; } }
    </style>
    <link rel="stylesheet" href="assets/css/nav.css" />
    <link rel="stylesheet" href="assets/css/blog.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
    />
  </head>
  <body>
    <nav>
      <ul class="navbar-container">
        <li>
          <img
            src="https://dumbways.id/assets/images/brandred.png"
            class="navbar-logo"
          />
        </li>
        <li>
          <a href="/" class="navbar-link"> Home </a>
        </li>
        <li>
          <a href="/blog" class="navbar-link"> Blog </a>
        </li>
        <li class="navbar-right">
          <button class="hamburger-button" onclick="toggleHamburger()">
            <i class="fa-solid fa-bars"></i>
          </button>
          <a href="/contact" class="navbar-contact-button">Contact Me</a>
        </li>
      </ul>

      <div id="hamburger-container" class="hamburger-container hamburger-hide">
        <a href="/">Home</a>
        <a href="/blog" class="hamburger-active">Blog</a>
        <a href="/contact">Contact Me</a>
      </div>
    </nav>

    <div class="blog">
      <hr class="line" />
      <div id="contents" class="blog-list">
        {{#each blogs}}
          <div class="blog-list-item">
            <div class="blog-image">
              <img src="${blogs[index].image}" alt="" />
            </div>
            <div class="blog-content">
              <div class="btn-group">
                <button class="btn-edit">Edit Post</button>
                <button class="btn-post">Delete Post</button>
              </div>
              <h1>
                <a href="blog-detail.html" target="_blank">{{title}}</a>
              </h1>
              <div class="detail-blog-content">
                {{createdAt}}
                |
                {{author}}
              </div>
              <p>
                {{content}}
              </p>
            </div>
          </div>
        {{/each}}
      </div>
    </div>

    <script src="assets/js/nav.js"></script>
  </body>
</html>