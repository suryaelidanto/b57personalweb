<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      .active {
        color: orangered !important;
        font-weight: bold;
      }

      .btn-primary {
        background-color: orangered;
        border: none;
      }

      .btn-primary:hover {
        background-color: red;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <img
          style="width: 50px; height: 50px; object-fit: contain"
          src="https://dumbways.id/assets/images/brandred.png"
          class="navbar-logo"
        />
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-3">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="#">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Blog</a>
            </li>
          </ul>
          <button class="btn btn-primary" type="submit">Contact Me</button>
        </div>
      </div>
    </nav>

    <div class="d-flex flex-column align-items-center">
      <h1 class="text-center">Create Post Blog</h1>

      <form class="w-25" onsubmit="addBlog(event)">
        <div class="mb-3">
          <label for="input-blog-title" class="form-label">Title</label>
          <input
            type="text"
            class="form-control"
            id="input-blog-title"
            style="background-color: #f4f2f2"
          />
        </div>
        <div class="mb-3">
          <label for="input-blog-content" class="form-label">Content</label>
          <textarea
            class="form-control"
            id="input-blog-content"
            rows="3"
            style="background-color: #f4f2f2"
          ></textarea>
        </div>
        <div class="mb-3">
          <label for="input-blog-image" class="form-label">Upload Image</label>
          <input
            class="form-control"
            type="file"
            id="input-blog-image"
            style="background-color: #f4f2f2"
          />
        </div>

        <div class="d-flex justify-content-end">
          <button class="btn btn-primary" type="submit">Post Blog</button>
        </div>
      </form>

      <div id="contents"></div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="assets/js/blog.js"></script>
  </body>
</html>
